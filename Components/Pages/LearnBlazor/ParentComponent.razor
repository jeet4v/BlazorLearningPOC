@page "/learnBlazor/parentComponent"

<h3>Parent Component</h3>

<CascadingValue Value="@strMessageForGrandChildTemp" Name="Message">
    <CascadingValue Value="@strLuckyNumberTemp" Name="LuckyNumber">
        <_ChildComponent @ref="childComponent" Title="This title is pass as a parameter from Parent Component."
        OnButtonClick="ShowMessage"
        OnClearButtonClick="ClearMessage">

            @* Some text/data in between the tags. This data can be fetched by default ChildContent(RenderFragment) without any tag. *@
            <ChildContent> Some text/data in between the tags through ChildContent(RenderFragment). </ChildContent>
            <ChildOtherContent> Some text/data in between the tags through ChildOtherContent(RenderFragment). </ChildOtherContent>
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>

<p> @MessageText </p>

<div class="row">
    <button class="btn btn-success m-2" style="width: 200px;" @onclick="() => childComponent.ToasterSuccess()">Success Message (Calling child's method)</button>
</div>

@code {
    private _ChildComponent childComponent;
    public string MessageText = string.Empty;
    private string strMessageForGrandChildTemp = "This message is passed from Parent to Grnad Child.";
    private string strLuckyNumberTemp = "28";

    private void ShowMessage()
    {
        MessageText = "Button inside child component is clicked.";
    }

    private void ClearMessage()
    {
        MessageText = "";
    }



}
